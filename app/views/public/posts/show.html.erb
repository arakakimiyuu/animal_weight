<div class='container px-5 px-sm-0'>
  <h4 class="pt-3">投稿詳細</h4>
  <div class='row'>
    <div class='col-5 offset-md-4'>
     <table class="table">
      <tr>
       <td>日付</td>
       <td><%= @post.date %></td>
      </tr>
      <tr>
       <td>動物の種類</td>
       <td><%= @post.pet.pet_type %></td>
      </tr>
      <tr>
       <td>体重</td>
       <td><%= @post.weight %></td>
      </tr>
      <tr>
       <td>フード種類</td>
       <td><%= @post.feed %></td>
      </tr>
      <tr>
       <td>フード量</td>
       <td><%= @post.amount_food %></td>
      </tr>
      <tr>
       <td>
        <%= render 'btn', post: @post %>
       </td>
      </tr>
       <td class="d-flex justify-content-center">
        <%= link_to "編集する", edit_post_path, class: "btn btn-success" %>
       </td>
       <td>
        <%= link_to "削除する", post_path(@post.id),  data: { confirm: "本当に消しますか？" }, method: :delete, class: "btn btn-danger" %>
       </td>
     </table>
     <table class="comment-post">
      <%= render 'comment', comments: @comments %>
     </table>
     <div>
      <%= form_with model: [@post, @comment] do |f| %>
        <%= f.text_area :comment, rows: '4', placeholder: "コメントをここに", class:"form-control" %>
        <%= f.submit "送信する" %>
      <% end %>
     </div>
    </div>
   </div>
 </div>
 <div class="d-flex justify-content-center">
  <%= paginate @comments %>
 </div>