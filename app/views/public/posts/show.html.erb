<div class='container px-5 px-sm-0'>
  <h4 class="pt-3">投稿詳細</h4>
  <div class='row'>
    <div class='col-5'>
     <table class="table">
      <tr>
       <td>日付</td>
       <td><%= @post.date %></td>
      </tr>
      <tr>
       <td>動物の種類</td>
       <td><%= @post.pet.pet_type %></td>
      </tr>
      <tr>
       <td>体重</td>
       <td><%= @post.weight %></td>
      </tr>
      <tr>
       <td>フード種類</td>
       <td><%= @post.feed %></td>
      </tr>
      <tr>
       <td>フード量</td>
       <td><%= @post.amount_food %></td>
      </tr>
      <tr>
       <td id="btn_">
        <%= render 'public/posts/btn', post: @post %>
       </td>
      </tr>
       <td class="d-flex justify-content-center">
        <% if @post.customer == current_customer %>
         <%= link_to "編集する", edit_post_path, class: "btn btn-success" %>
        <% end %>
       </td>
       <td>
        <% if @post.customer == current_customer %>
         <%= link_to "削除する", post_path(@post.id),  data: { confirm: "本当に消しますか？" }, method: :delete, class: "btn btn-danger" %>
        <% end %>
       </td>
     </table>
    </div>
    <div class="col-7">
      <table class="new-comment">
       <div id="new_comment">
        <%= render 'public/posts/comment', comments: @comments %>
       </div>
      </table>
      <!--非同期通信化のためlocal: trueを削除-->
      <div id="comments_area">
       <%= render "public/posts/form", comment: @comment %>
      </div>
    </div>
  </div>
</div>
 <div class="d-flex justify-content-center">
  <%= paginate @comments %>
 </div>
