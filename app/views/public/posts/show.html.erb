<div class='container px-5 px-sm-0'>
  <div class="row">
    <div class="col-8">
      <h2 class="py-5">投稿詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class='col-6'>
     <table class="table">
      <tr>
       <td>日付</td>
       <td><%= @post.date %></td>
      </tr>
      <tr>
       <td>ユーザー名</td>
       <td><%= @post.customer.name %></td>
      </tr>
      <tr>
       <td>ペット名</td>
       <td><%= @post.pet.pet_name %></td>
      </tr>
      <tr>
       <td>動物の種類</td>
       <td><%= @post.pet.pet_type %></td>
      </tr>
      <tr>
       <td>体重</td>
       <td><%= @post.weight %></td>
      </tr>
      <tr>
       <td>フード種類</td>
       <td><%= @post.feed %></td>
      </tr>
      <tr>
       <td>フード量</td>
       <td><%= @post.amount_food %></td>
      </tr>
       <td id="btn_<%= @post.id %>">
        <%= render 'public/posts/btn', post: @post %>
       </td>
       <td class="d-flex justify-content-center">
        <% if @post.customer == current_customer %>
         <%= link_to "編集する", edit_post_path, class: "btn btn-success" %>
        <% end %>
       </td>
       <td>
        <% if @post.customer == current_customer %>
         <%= link_to "削除する", post_path(@post.id),  data: { confirm: "本当に消しますか？" }, method: :delete, class: "btn btn-danger" %>
        <% end %>
       </td>
     </table>
    </div>
    <div class="col-6">
     <div>
       <%= link_to '新しい順', post_path(latest: "true") %>
       |<%= link_to '古い順', post_path(old: "true") %>
     </div>
       <div id="comment-post">
        <%#= render 'public/posts/comment', post: @post,comments: @comments %>
       </div>
      <div id="textarea">
       <%= form_with model: [@post, @comment], local: false do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class:"form-control" %>
        <%= f.submit "送信する", class: "mt-3" %>
       <% end %>
      </div>
    </div>
   </div>
   <%#グラフの記述 series: falseを記述しないと、データが無い日付に０がカウントされる %>
   <%= line_chart @posts.group_by_day(:date, range: (@post.date - 4.week)..@post.date, series: false).average(:weight),height:"400px", xtitle: "日", ytitle: "体重", min: 0, max: @max_weight, curve: false %>
 </div>
 <script>
  function comment_index(post_id){
    $.ajax({
      url: '/posts/' + post_id + '/comments',
      dataType: 'script',
    })
     .done()
     .fail()
     .always();
   }
  comment_index(<%= @post.id %>);
 </script>