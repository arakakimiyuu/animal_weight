<div class='container px-5 px-sm-0'>
  <h4 class="pt-3">投稿詳細</h4>
  <div class='row'>
    <div class='col-5'>
     <table class="table">
      <tr>
       <td>日付</td>
       <td><%= @post.date %></td>
      </tr>
      <tr>
       <td>動物の種類</td>
       <td><%= @post.pet.pet_type %></td>
      </tr>
      <tr>
       <td>体重</td>
       <td><%= @post.weight %></td>
      </tr>
      <tr>
       <td>フード種類</td>
       <td><%= @post.feed %></td>
      </tr>
      <tr>
       <td>フード量</td>
       <td><%= @post.amount_food %></td>
      </tr>
      <tr>
       <td id="btn_">
        <%= render 'btn', post: @post %>
       </td>
      </tr>
       <td class="d-flex justify-content-center">
        <% if @post.customer == current_customer %>
         <%= link_to "編集する", edit_post_path, class: "btn btn-success" %>
        <% end %>
       </td>
       <td>
        <% if @post.customer == current_customer %>
         <%= link_to "削除する", post_path(@post.id),  data: { confirm: "本当に消しますか？" }, method: :delete, class: "btn btn-danger" %>
        <% end %>
       </td>
     </table>
    </div>
    <div class="col-7">
      <table class="comment-post">
       <%= render 'comment', comments: @comments %>
      </table>
      <%= form_with model: [@post, @comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class:"form-control" %>
        <%= f.submit "送信する", class: "mt-3" %>
      <% end %>
    </div>
  </div>
</div>
 <div class="d-flex justify-content-center">
  <%= paginate @comments %>
 </div>