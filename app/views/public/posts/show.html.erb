<div class='container px-5 px-sm-0'>
  <h4 class="pt-3">投稿詳細</h4>
  <div class='row'>
    <div class='col-5 offset-md-4'>
     <table class="table">
      <tr>
       <td>日付</td>
       <td><%= @post.date %></td>
      </tr>
      <tr>
       <td>動物の種類</td>
       <td><%= @post.pet.pet_type %></td>
      </tr>
      <tr>
       <td>体重</td>
       <td><%= @post.weight %></td>
      </tr>
      <tr>
       <td>フード種類</td>
       <td><%= @post.feed %></td>
      </tr>
      <tr>
       <td>フード量</td>
       <td><%= @post.amount_food %></td>
      </tr>
      <tr>
       <td>
          <% if @post.favorited_by?(current_customer) %>
            <%= link_to post_favorites_path(@post.id), method: :delete, remote: true do %>
             <span style="color:red;">❤︎</span>
             <%= @post.favorites.count %>いいね
            <% end %>
           <% else %>
            <%= link_to post_favorites_path(@post.id), method: :post, remote: true do %>
             <span style="color:blue;">❤︎</span>
             <%= @post.favorites.count %>いいね
            <% end %>
          <% end %>
       </td>
      </tr>
     </table>
     <div class="d-flex justify-content-center">
       <%= link_to "編集する", edit_post_path, class: "btn btn-success" %>
     </div>
     <span>
       <%= link_to "削除する", post_path(@post.id),  data: { confirm: "本当に消しますか？" }, method: :delete, class: "btn btn-sm btn-danger" %>
     </span>
    </div>
   </div>
 </div>