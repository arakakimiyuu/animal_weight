         <% comments.each do |comment| %>
          <tr>
              <td>
              <%= link_to (comment.post) do %>
               <%= comment.post.created_at %>
               <div><%= comment.customer.name %></div>
              <% end %>
              </td>
              <td>
              <%= comment.comment %>
              </td>
              <td>
              <% if comment.customer == current_customer %>
                <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
              <% end %>
              </td>
          </tr>
         <% end %>



