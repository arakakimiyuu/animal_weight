<div class='container px-5 px-sm-0'>
 <div class="row">
    <div class="col-8">
      <h2 class="py-5">投稿一覧</h2>
    </div>
  </div>
     <div class="row">
      <div class="col-10 offset-1">
        <div class="d-flex justify-content-end">
        新規投稿は
        <%= link_to new_post_path do %>
          こちら
        <% end %>
        から
     </div>
     <div>
       <%= link_to '新しい順', posts_path(latest: true) %>
       |<%= link_to '古い順', posts_path(old: true) %>
     </div>
     <table class="table">
      <thead>
       <tr>
        <th>日付</th>
        <th>ユーザー名</th>
        <th>動物の種類</th>
        <th>体重</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
           <td><%= post.date %></td>
           <td><%= post.customer.name %></td>
           <td><%= link_to post.pet.pet_type, post_path(post.id) %></td>
           <td><%= post.weight %></td>
           <td id="btn_<%= post.id %>">
            <%= render 'public/posts/btn', post: post %>
           </td>
           <td><%= link_to "#{post.comments.count} コメント数", post_path(post.id) %></td>
           <td><%= post.created_at.to_s(:datetime_jp) %></td>
          </tr>
        <% end %>
      </tbody>
     </table>
    </div>
  </div>
 <div class="d-flex justify-content-center">
  <%= paginate @posts %>
 </div>
</div>