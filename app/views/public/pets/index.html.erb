<div class='container px-5 px-sm-0'>
  <div class="row">
    <div class="col-8">
      <h2 class="py-5">ペット登録一覧</h2>
    </div>
  </div>
     <div class="row">
      <div class="col-10 offset-1">
        <div class="d-flex justify-content-end">
        新規投稿は
        <%= link_to new_pet_path do %>
          こちら
        <% end %>
        から
     </div>
     <div>
       <%= link_to '新しい順', pets_path(latest: "true") %>
       |<%= link_to '古い順', pets_path(old: "true") %>
     </div>
      <table class="table">
        <thead>
          <tr>
            <th>ペットID</th>
            <th>ペット名</th>
            <th>動物の種類</th>
            <th>生年月日</th>
            <th>性別</th>
            <th colspan="6"></th>
          </tr>
        </thead>
        <tbody>
          <% @pets.each do |pet| %>
            <tr>
              <td><%= pet.id %></td>
              <td><%= link_to pet.pet_name, pet_path(pet.id) %></td>
              <td><%= pet.pet_type %></td>
              <td><%= pet.birth_date %></td>
              <td><%= pet.gender_i18n %></td>
              <td><%= pet.created_at.to_s(:datetime_jp) %></td>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
 　 <%= paginate @pets %>
  </div>
</div>