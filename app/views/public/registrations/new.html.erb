<div class='container px-5 px-0'>
  <h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

  <table class="table">
    <tboody>
      <tr>
        <div class="field">
          <th><%= f.label :name %></th>
          <th><%= f.text_field :name %></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th><%= f.label :email %></th>
          <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th><%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %></th>
          <th><%= f.password_field :password, autocomplete: "new-password" %></th>
        </div>
      </tr>
      <tr>
        <div class="field">
          <th><%= f.label :password_confirmation %></th>
          <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
        </div>
      </tr>
      <tr>
       <th>
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
       </th>
      </tr>
    </tbody>
  </table>
  <% end %>
  
  <h5>既に登録お済の方</h5>

  <%= render "public/shared/links" %>
</div>