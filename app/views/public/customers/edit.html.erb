<div class='container px-5 px-0'>
  <div class="row">
    <div class="col-8">
      <h2 class="py-5"><%= @customer.name %>さんの会員情報編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-1">
    <%= render 'layouts/errors', obj: @customer %>
     <%= form_with model: @customer, url: customers_mypage_path do |f| %>
      <table class="table">
        <tbody>
         <tr>
          <div class="field">
             <th><%= f.label :名前 %></th>
             <th><%= f.text_field :name, class: "form-control", autofocus: true %></th>
          </div>
         </tr>
         <tr>
           <div class="field">
             <th><%= f.label :メールアドレス %></th>
             <th><%= f.text_field :email, class: "form-control", autofocus: true %></th>
          </div>
         </tr>
         <tr>
           <th><%= f.submit "編集内容を保存する", class: "btn btn-success" %></th>
           <th><%= link_to "退会する", customers_check_path, class: "btn btn-danger" %></th>
         </tr>
        </tbody>
      </table>
     <% end %>
    </div>
  </div>
  </div>
</div>
