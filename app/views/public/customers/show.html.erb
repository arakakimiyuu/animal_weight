<div class='container px-5 px--0'>
　<div class="row">
    <div class="col-8">
      <h2 class="py-5"><%= @customer.name %>さんのマイページ</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <h2>登録情報</h2>
      <table class="table">
        <tr>
          <th>名前</th>
          <th><%= @customer.name %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th>ペット登録履歴一覧</th>
          <th><%= link_to "一覧を見る", customers_mypet_path, class: "btn btn-info" %></th>
        </tr>
        <tr>
          <th>投稿履歴一覧</th>
          <th><%= link_to "一覧を見る", customers_mypost_path, class: "btn btn-info" %></th>
        </tr>
      </table>
      <div>
        <% if !current_customer.guest? %> <%#ゲストログインした場合、編集ページを変えられないようにする記述 %>
         <%= link_to "編集する", customers_mypage_edit_path, class: "btn btn-success" %>
        <% end %>
      </div>
     </div>
    </div>
  </div>
</div>