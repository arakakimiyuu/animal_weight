<div class='container px-5 px-0'>
  <div class="row">
    <div class="col-3 offset-1">
      <h2 class="py-5">管理者ログイン</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 offset-2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <table class="table">
        <tr>
          <div class="field">
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </div>
        </tr>
        <tr>
          <div class="field">
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </div>
        </tr>
        <tr>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        </tr>
      </table>
      <div class="actions">
        <%= f.submit "ログイン", class: "btn btn-info" %>
      </div>
    <% end %>
    <%= render "admin/shared/links" %>
    </div>
  </div>
</div>