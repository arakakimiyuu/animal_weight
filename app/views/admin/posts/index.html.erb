<div class='container px-5 px-sm-0'>
 <h4 class="pt-3 py-5">投稿一覧</h4>
 <div class='row'>
  <div class='col-md-10 offset-2'>
   <table class="table">
    <thead>
     <tr>
      <th>日付</th>
      <th>動物の種類</th>
      <th>体重</th>
      <th></th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
         <td><%= post.date %></td>
         <td><%= link_to post.pet.pet_type, post_path(post.id) %></td>
         <td><%= post.weight %></td>
         <td>
          <%= render 'btn', post: post %>
         </td>
         <td><%= link_to "#{post.comments.count} コメント数", post_path(post.id) %></td>
        </tr>
      <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>
<div class="d-flex justify-content-center">
 <%= paginate @posts %>
</div>