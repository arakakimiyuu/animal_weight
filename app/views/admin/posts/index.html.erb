<div class='container px-5 px-sm-0'>
 <div class="row">
    <div class="col-4 offset-1">
      <h2 class="py-5">
        <span>顧客投稿一覧</span>
      </h2>
    </div>
  </div>
  <div class='row'>
   <div class='col-8 offset-2'>
    <table class="table">
     <thead>
      <tr>
       <th>日付</th>
       <th>動物の種類</th>
       <th>体重</th>
       <th></th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
       <% @posts.each do |post| %>
         <tr>
          <td><%= post.date %></td>
          <td><%= link_to post.pet.pet_type, post_path(post.id) %></td>
          <td><%= post.weight %></td>
          <td class="pl-3">
           <%= link_to "削除", admin_post_path(post), method: :delete, class: "btn btn-danger", data:{ confirm: "本当に削除しますか？" } %>
          </td>
         </tr>
       <% end %>
     </tbody>
    </table>
   </div>
  </div>
</div>
<div class="d-flex justify-content-center">
 <%= paginate @posts %>
</div>